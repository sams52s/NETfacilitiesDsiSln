<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NETfacilitiesDsi.View.CustomeBtn">
  <ContentView.Content>
        <Frame CornerRadius="5" x:Name="myFrame" HorizontalOptions="Start" VerticalOptions="Start"
             Margin="2" HasShadow="True"  >
            <StackLayout Orientation="Vertical"  BackgroundColor="Transparent" x:Name="stack">

                <Image x:Name="btnIcon" HeightRequest="40" WidthRequest="40" HorizontalOptions="CenterAndExpand"
                       BackgroundColor="Transparent" />
                <Label x:Name="btnText" HorizontalOptions="Start" TextColor="#000" BackgroundColor="Transparent"
                       FontSize="16" />
            </StackLayout>

        </Frame>

  </ContentView.Content>
</ContentView>